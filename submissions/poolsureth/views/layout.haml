    %link{ href: "/css/vendor/bulma.css", rel: "stylesheet", type: "text/css" }
    %link{ href: "/css/style.css", rel: "stylesheet", type: "text/css" }

  %body{ class: body_class }
    .container.is-fluid

      %nav.nav.has-shadow
        .container
          .nav-left
            %a.nav-item.is-brand{ href: "/" }
              %h1.title.hs20 PoolSurETH
